<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="201dp"
        android:background="@drawable/gray"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="car name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nametext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"

            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="etat"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nametext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="localisation"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nametext4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext3"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="panne"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nametext5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext4"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Matricule"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:backgroundTint="@color/browser_actions_bg_grey"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:backgroundTint="@color/browser_actions_bg_grey"/>

            />

            <Button
                android:id="@+id/loca"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="location"
                android:textAllCaps="false"
                android:backgroundTint="@color/browser_actions_bg_grey"/>
            />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>